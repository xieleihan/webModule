/**index.wxss**/
page {
  /* height: 100vh; */
  display: flex;
  flex-direction: column;
}
.container{
  width: 100dvw;
  height: 100%;
  background-color: #050505;
}

.container .banner{
  width: 100%;
  height: 30%;
}

.container .banner img{
  width: 100%;
  height: 100%;
}

.container .title{
  color: #ca9a34;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40px;
  width: 100%;
  margin-bottom: 10px;
}

.container .info{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 100%;
  color: #ca9a34;
}

.container .form{
  color: #ca9a34;
  width: 80%;
  margin: 0 auto;
  margin-top: 10px;
}

.container .jb,
.container .bj,
.container .date,
.container .time,
.container .people{
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.container .jb input,
.container .bj input,
.container .date input,
.container .time input,
.container .people input{
  padding-left: 10px;
}

.container .map{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .map .box{
  width: 80%;
  border: 1px solid #ca9a34;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ca9a34;
  padding: 5px 0;
  border-radius: 5px;
}

.container .waring{
  width: 70%;
  margin: 0 auto;
  margin-bottom: 10px;
}

.container .waring .title{
  color: #d50c0f;
  font-size: 20px;
  margin-top: 10px;
}

.container .waring .info view{
  font-size: 14px;
}

.container .fk{
  width: 90%;
  margin: 0 auto;
  border: 1px solid #ca9a34;
  border-radius: 10px;
  margin-bottom: 10px;
}

.container .fk .w-top{
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #ca9a34;
}
.container .fk .w-top .left{
  height: 100%;
  margin-right: 30px;
}

.container .fk .w-top cover-image{
  border-radius: 50%;
  overflow: hidden;
}

.container .fk .w-top .right{
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.container .fk .w-top .right .wtitle{
  /* font-weight: bold; */
  margin-bottom: 20px;
  font-size: 24px;
}

.container .fk .w-bottom{
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-between;
}

.container .fk .w-bottom .left{
  background-color: #fe010f;
  color: white;
  padding: 2px 10px;
  margin: 0 10px;
  margin-bottom: 10px;
  border-radius: 20px;
}

.container .fk .w-bottom .right{
  margin: 0 10px;
  margin-bottom: 10px;
  color: #ca9a34;
}

.car,.jd{
  margin-bottom: 10px;
}
.car,.server{
  margin-top: 10px;
}

.container .mapPath{
  display: flex;
  flex-direction: row;
  width: 90%;
  padding: 0 10px;
  align-items: center;
  justify-content: center;
  color: white;
}

.container .mapPath cover-image{
  margin-right: 10px;
}

.daohan{
  margin: 10px 0;
}